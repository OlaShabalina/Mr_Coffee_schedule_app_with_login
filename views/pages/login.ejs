<%- include('../partials/head')%>

    <title>Login page</title>
</head>
<body>
    <div class="container d-table align-middle">
        <h1 class="text-center">Log in to access the <br> Coffee schedule app!</h1>
        <ul>
            <% if (messages.success_msg) { %> 
            <li class="text-danger"><%= messages.success_msg %></li>
            <% } %> 
        </ul>
        <ul>
            <% if (messages.error ) { %> 
            <li><%= messages.error %></li>
            <% } %> 
        </ul>
        <div class="container">
            <form action="/login" method="POST" id="create-user-form" novalidate>
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" name="email" aria-describedby="email">
                <div id="email" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <button type="submit" class="btn btn-secondary" value="Register">Log in</button>
                <a href="/register" class="btn btn-secondary">Register</a>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
</body>
</html>