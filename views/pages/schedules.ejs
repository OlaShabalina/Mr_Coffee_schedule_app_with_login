<%- include('../partials/head')%>
    <title>Schedules</title>
</head>
<body>
    <%- include('../partials/navbar')%>
<main>
    <!--HEADER GOES HERE-->
    <div class="container">
    <h1 style = "color: rgb(221, 127, 221) " class="text-center"> Schedules </h1>

    <div class="row gy-4 text-center">
      <% for (let i = 0; i < schedules.length; i++) {%>
      <div class="col-sm-6">
          <div class="card text-center">
              <div class="card-body">
                  <h5 class="card-title">Schedule <%= schedules[i].schedule_id %></h5>
                  <ul class="list-group list-group-flush">
                      <li class="list-group-item"><b>User:</b> <%= schedules[i].firstname %> <%= schedules[i].lastname %> </li>
                      <li class="list-group-item"><b>Day of the week</b> <%= schedules[i].day %></li>
                      <li class="list-group-item"><b>Time: </b> <%= schedules[i].start_at %> - </b> <%= schedules[i].end_at %></li>
                  </ul>
                  <a href="/schedules/<%= schedules[i].user_id %> " class="btn btn-secondary">See schedules of user <%= schedules[i].user_id %></a>
              </div>
          </div>
      </div>
      <% } %>
  </div>

</main>
    <!--FOOTER GOES HERE-->
<%- include('../partials/footer')%>