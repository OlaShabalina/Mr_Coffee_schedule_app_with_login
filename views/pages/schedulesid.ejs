<%- include('../partials/head')%>
    <title>Schedules</title>
</head>
<body>
    <%- include('../partials/navbar')%>
    <main>
 
    <h1 style = "color: purple " class="text-center"> USER SCHEDULES</h1>
    <h5 style = "color: purple " class="text-center"> for <%= userName %> </h1>

    <div class="container">
        <div class="row gy-4 d-flex align-items-center justify-content-center">
            <% for (let i = 0; i < schedules.length; i++) { %>
            <div class="col-sm-6">
                <div class="card text-center">
                    <div class="card-body">
                        <% if (schedules) { %> 
                        <h5 class="card-title">Schedule <%= i + 1 %></h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><b>Day of the week:</b> <%= schedules[i].day %> </li>
                            <li class="list-group-item"><b>Starts at:</b> <%= schedules[i].start_at %>  </li>
                            <li class="list-group-item"><b>Finishes at:</b> <%= schedules[i].end_at %> </li>
                        </ul>   
                        <% } else { %> 
                            <p class="text-dark"> You don't have any schedules yet</p>
                        <% }  %> 
                    </div>
                </div>
            </div> 
            <% } %> 
        </div>

</main>
